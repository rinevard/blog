.timeline-wrap
    margin: 40px 20px 40px 40px
    border-left: 3px solid color-border
    @media mq-mini
        margin: 40px 20px 40px 40px
    @media mq-mobile
        margin: 40px 20px 40px 40px

.timeline-row
    clearfix()
    margin: 5px 0 // 减小间距
    .node,
    .title
        float: left
    .node
        width: 12px
        color: white
        height: 12px
        border-radius: 50%
        margin: 11px 0 0 -8px
        display: inline-block
        background-color: color-link
    .content
        @extend $block
        margin-left: 25px
        position: relative
        &:after,
        &:before
            content: ''
            position: absolute
            display: inline-block
        &:after
            top: 10px
            left: -14px
            border: 7px solid transparent
            border-right-color: white
        &:before
            top: 9px
            left: -16px
            border: 8px solid transparent
            border-right-color: rgba(0, 0, 0, 0.05)
        h1,
        .article-meta
            padding: 10px
        h1
            font-size: 16px
            font-weight: normal // 移除加粗
            a
                @extend $link-dark
        .article-meta
            font-size: 12px
            color: color-default + #333
            border-top: 1px solid #f7f7f7
            background-color: rgba(244, 246, 247, 0.2)

.timeline-row-major
    .node
        width: 30px // 增大圆圈以容纳图标
        height: 30px // 增大圆圈以容纳图标
        font-size: 14px
        margin: 0 0 0 -17px
        // 使用 flexbox 实现居中
        display: flex
        align-items: center
        justify-content: center
    .title
        font-size: 18px
        font-weight: normal // 移除加粗
        margin-left: 15px
        line-height: 30px
        a
            @extend $link-dark
