#footer
    padding: 30px 0
    border-top: 1px solid #f2f2f7
    color: color-grey
    font-size: font-size
    text-align: center
    background: #fafafa
    .outer
        margin-bottom: 0
    a
        color: color-link
        text-decoration: none
        transition: color 0.2s ease
        &:hover
            text-decoration: none
            color: darken(color-link, 10%)

#footer-info
    line-height: line-height
    font-size: 0.9em
    max-width: 800px
    margin: 0 auto